// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model Company {
  id String @id @default(uuid())
  clients Client[]
  name String 
  email String
  password String
}

model Client {
  id String @id @default(uuid())
  company Company @relation(fields: [id], references: [id])
  name String 
  email String
  phone String
}
